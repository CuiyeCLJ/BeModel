<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/edit_bg"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/iv_avatar_conversation"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_avatar_conversation"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_username_conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈龙娟"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_location_conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州市番禺"
            android:layto="@+id/tv_username_conversation"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:id="@+id/tv_distance_conversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离8公里"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"/>

</RelativeLayout>